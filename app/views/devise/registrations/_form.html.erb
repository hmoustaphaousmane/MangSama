<%# <div class='container'> %>
<div class="row">
<div class="col-md-6 offset-3">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div style="color: red">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>

    <div class="form-outline mb-4">
      <%= f.label :"first name :", style: "display: block", :class => "form-label" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "email", :class => "form-control" %>
    </div>

    <div class="form-outline mb-4">
      <%= f.label :"last_name :", style: "display: block", :class => "form-label" %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-outline mb-4">
      <%= f.label :"email :", style: "display: block", :class => "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
    </div>

    <div>
      <%= f.label :"gender :", style: "display: block" %>
      <%= select_tag(:gender, options_for_select(["Male", "Female"])) %>
    </div>
    
    <div class="form-outline mb-4">
      <%= f.label :"birth :", style: "display: block", :class => "form-label" %>
      <%= f.date_field :birth, autofocus: true, autocomplete: "email", :class => "form-control" %>
    </div>

    <div class="form-outline mb-4">
      <%= f.label :"bio :", style: "display: block", :class => "form-label" %>
      <%= f.text_field :bio, autofocus: true, autocomplete: "email", :class => "form-control" %>
    </div>

    <div class="form-outline mb-4">
      <%= f.label :"password :", style: "display: block", :class => "form-label" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", :class => "form-control" %>
    </div>
    
    <div class="field">
      <%= f.label :"password_confirmation :", style: "display: block", :class => "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control" %>
    </div>

    <div class="text-center mt-4">
      <%= f.submit :class => "btn btn-primary btn-block mb-4" %>
      <% if !user_signed_in? %>
        <p>Already Have an Account ? <%= render "devise/shared/links" %></p>
      <% end %>
    </div>
  <% end %>

</div>
</div>
<%# </div> %>
