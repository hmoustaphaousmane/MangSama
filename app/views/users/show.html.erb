<div class="container">
<div id="<%= dom_id @user %>">
<div class="row">

  <div class="col-sm-2"></div>

  <div class="shadow p-4 mb-5 bg-body rounded col-md-8">
  <center>
    <h3>My Profile</h3>
    <table class="table table-bordered table-striped table-hover">
      <tbody>            
        <tr class="success"> 
          <td><strong>ID : </strong><%= @user.id %></td>
        </tr>
        <tr class="success"> 
          <td><strong>Full Name : </strong><%= @user.first_name %> </strong><%= @user.last_name %></td>
        </tr>
        <tr class="success"> 
          <td><strong>Email : </strong><%= @user.email %></td>
        </tr>
        <tr class="success"> 
          <td><strong>Password : </strong><%= @user.birth%></td>
        </tr>            
        <tr class="success"> 
          <td><strong>Gender : </strong><%= @user.gender %></td>
        </tr>
        <tr class="success"> 
          <td><strong>Bio : </strong><%= @user.bio %></td>
        </tr>
        <tr class="success"> 
          <td><strong>Password : </strong><%= @user.encrypted_password%></td>
        </tr>
      </tbody>
    </table>
    
  </center>
  <% if current_page?(@user) %>
    <div class="col-12 d-flex justify-content-end mb-2">
      <%= link_to "Go Back", :back, class: "btn btn-primary sm mx-2" %>
      <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-warning sm mx-2" %>
      <%= button_to "Destroy Account", @user, method: :delete, class: "btn btn-danger sm mx-2", :onclick => "return confirm('Are you sure to delete your account ?')" %>
    </div>
  <% end %>
  </div>

  </div>
</div> 
</div>
</div>
