<% if user_signed_in? %>
  <div class="dropdown bg-dark">
    <div class="col text-end">
      <a class="dropdown-toggle" href="#" role="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
        <%= current_user.username %>
      </a>
      <div class="btn-group">
        <ul class="dropdown-menu" role="menu">
          <% unless current_page?(user_path(current_user.id)) %>
            <li><%= link_to "Profile", current_user, class: "dropdown-item" %></li>
          <% end %>
          <li>
            <%= form_tag destroy_user_session_path, method: :delete, class: "dropdown-item" do %>
              <%= submit_tag 'Log out' %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <nav class="navbar navbar-expand-lg bg-light">
    <div class="container">
      <%# <a class="navbar-brand" href="<%= mangas_path >"><%= image_tag('logo.PNG', width: "15%") ></a> %>
      <a class="navbar-brand" href="<%= mangas_path %>">MangaSama</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="<%= mangas_path %>">Accueil</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= top_mangas_path %>">Top Manga</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= recommended_path %>">Recommandation</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Contact</a>
          </li>
        </ul>
        <%= form_tag(search_mangas_path, method: :get, class: "d-flex ms-auto") do %>
          <div class="input-group">
            <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Rechercher un manga" %>
            <button class="btn btn-outline-light" type="submit">Rechercher</button>
          </div>
        <% end %>
      </div>
    </div>
  </nav>
<% else %>
  <div class="container bg-dark">
    <div class="row">
      <div class="col text-end">
        <a class="btn btn-primary" href="<%= new_user_session_path %>">Login</a>
        <a class="btn btn-secondary" href="<%= new_user_registration_path %>">Signup</a>
      </div>
    </div>
  </div>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="<%= mangas_path %>">MangaSama</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="<%= mangas_path %>">Accueil</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= top_mangas_path %>">Top Manga</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= recommended_path %>">Recommandation</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Contact</a>
          </li>
        </ul>
        <%= form_tag(search_mangas_path, method: :get, class: "d-flex ms-auto") do %>
          <div class="input-group">
            <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Rechercher un manga" %>
            <button class="btn btn-outline-light" type="submit">Rechercher</button>
          </div>
        <% end %>
      </div>
    </div>
  </nav>
<% end %>



