<div class="container">
<p style="color: green"><%= notice %></p>

<h1 class="bg-secondary text-light py-2 rounded text-center">Favorites Mangas</h1>

<div id="gossips" class="rounded">
  <table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>Title</th>
      <%# <th>Synopsis</th> %>
      <th>Details</th>
      <th>Delete</th>
    </tr>
    </thead>
    <tbody>            
    <% @favorites.each do |favorite| %>
			<tr class="success">
			  <td><%= favorite.id %></td>
			  <td><%= favorite.manga.title %></td>
			  <%# <td><%= favorite.manga.synopsis </td> %>
        <td><%= link_to "Show Favorite", manga_path(favorite.manga.id), :class => "btn btn-outline-info sm" %></td>
        <td>
          <%= button_to "Remove favorite", favorite_path(favorite), method: :delete, data: { confirm: "Are you sure you want to remove this favorite?" }, class: "btn btn-outline-danger sm"%>
        </td>

			</tr>
    <% end %>
		</tbody>
	</table>
</div>
